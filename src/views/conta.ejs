<%- include('./includes/head') %>
<%- include('./includes/nav') %>


<div class="container my-5">
  <%- include('./includes/messages') %>

  <div class="row">

    <div class="col-lg m-2">
    
      <h1 class="my-4">Faça seu cadastro:</h1>

      <form class="form-cadastro" action="/conta/register" method="POST">
        <input type="hidden" name="_csrf" value="<%- csrfToken %>">

        <div class="form-group mb-3 ">
          <label class="form-label">Email address</label>
          <input type="email" class="email form-control" name="email">
         
        </div>

        <div class="form-group mb-3 ">
          <label class="form-label">Password</label>
          <input type="password" class="password form-control" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </div>

    

      <div class="col-lg m-2">

        <h1 class="my-4">Faça seu login:</h1>

        <form class="form-login" action="/conta/login" method="POST">

          <div class="form-group mb-3 ">
            <input type="hidden" name="_csrf" value="<%- csrfToken %>">
            <label class="form-label">Email address</label>
            <input type="email" class="email form-control" name="email">
           
          </div>
          <div class="form-group mb-3 ">

            <label class="form-label">Password</label>
            <input type="password" class="password form-control" name="password">

          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
  
      </div>
   
   
  </div>
</div>



<%- include('./includes/footer') %>  